<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/background_design">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:gravity="center"

            android:id="@+id/IP_TextBox"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/label_design"
            android:paddingTop="8sp" android:paddingBottom="8sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:gravity="center"

            android:id="@+id/Port_TextBox"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/IP_TextBox" android:background="@drawable/label_design"
            android:paddingTop="8sp" android:paddingBottom="8sp"/>
    <TextView
            android:text="@string/ip_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IP_TextView"
            android:textSize="24sp"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/IP_TextBox"
            android:layout_marginRight="32dp" app:layout_constraintBaseline_toBaselineOf="@+id/IP_TextBox"/>
    <TextView
            android:text="@string/port_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/Port_TextBox"
            app:layout_constraintEnd_toStartOf="@+id/Port_TextBox" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <Button
            android:text="@string/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            android:textSize="24sp" android:onClick="SwitchToJoystickActivity"
            android:background="@drawable/button_design" android:paddingLeft="24sp" android:paddingTop="16sp"
            android:paddingRight="24sp" android:paddingBottom="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>